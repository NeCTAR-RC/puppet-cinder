[DEFAULT]
rootwrap_config = /etc/cinder/rootwrap.conf
api_paste_confg = /etc/cinder/api-paste.ini
iscsi_helper = tgtadm
volume_name_template = volume-%s
volume_group = cinder-volumes
auth_strategy = keystone
state_path = /var/lib/cinder
volumes_dir = /var/lib/cinder/volumes
<% if @logdebug -%>
verbose=True
<%- else -%>
verbose=False
<%- end -%>

# Database
sql_connection=mysql://<%= cinder_db_user %>:<%= cinder_db_pass %>@<%= cinder_db_host %>/cinder

# RabbitMQ
rabbit_hosts="<%= cinder_rabbit_hosts %>"
<% if cinder_rabbit_ha %>
rabbit_ha_queues=True
<% end %>
rabbit_userid=<%= cinder_rabbit_user %>
rabbit_password=<%= cinder_rabbit_pass %>
rabbit_durable_queues=True
<% if cinder_rabbit_ssl %>
rabbit_use_ssl=True
<% end %>
rabbit_virtual_host=<%= cinder_rabbit_virtual_host %>

<% if @cinder_volume_type == 'netapp' %>
# Netapp Volume
volume_driver=cinder.volume.netapp.NetAppISCSIDriver
use_local_volume=False
netapp_wsdl_url = <%= netapp_wsdl_url %>
netapp_login = <%= netapp_login %>
netapp_password = <%= netapp_password %>
netapp_server_hostname = <%= netapp_server_hostname %>
netapp_storage_service = <%= netapp_storage_service %>
netapp_vfiler = <%= netapp_vfiler %>
<% end %>
