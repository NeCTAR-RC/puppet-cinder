[DEFAULT]
rootwrap_config = /etc/cinder/rootwrap.conf
api_paste_confg = /etc/cinder/api-paste.ini
iscsi_helper = tgtadm
volume_name_template = volume-%s
volume_group = cinder-volumes
auth_strategy = keystone
state_path = /var/lib/cinder
volumes_dir = /var/lib/cinder/volumes
<% if @logdebug -%>
verbose=True
<%- else -%>
verbose=False
<%- end -%>

osapi_volume_listen = <%= listen %>
osapi_volume_listen_port = <%= port %>

storage_availability_zone=<%= nova_cells_full_name %>

# Image Service
image_service=nova.image.glance.GlanceImageService
glance_api_servers=<%= nova_glance_servers %>

# Database
sql_connection=mysql://<%= db_user %>:<%= db_pass %>@<%= db_host %>/cinder

# RabbitMQ
rabbit_hosts="<%= rabbit_hosts %>"
<% if rabbit_ha %>
rabbit_ha_queues=True
<% end %>
rabbit_userid=<%= rabbit_user %>
rabbit_password=<%= rabbit_pass %>
rabbit_durable_queues=True
<% if rabbit_ssl %>
rabbit_use_ssl=True
<% end %>
rabbit_virtual_host=<%= rabbit_virtual_host %>


# Quotas
quota_volumes=0
quota_gigabytes=0

<% volume_config.each do |key,value| %>
<%= key %> = <%= value %><% end %>
